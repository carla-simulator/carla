mdl 1.0;

import df::*;
import anno::*;

export material light_omni (
    uniform color tint = color(1.)
    [[
        anno::display_name("Emission color"),
        anno::description("The color of the light")
    ]],
    uniform float intensity = 10
    [[
        anno::display_name("Intensity"),
        anno::description("The brightness of light")
    ]],
    uniform float unit_scale = 1.
    [[
        anno::display_name("Unit scale"),
        anno::description("Compensate for scene units other than meter")
    ]] 
) [[
    anno::copyright_notice (
    "SPDX-FileCopyrightText: Copyright (c) 2016-2025 NVIDIA CORPORATION & AFFILIATES. All rights reserved. "
    "SPDX-License-Identifier: MIT "
    ),
    anno::author("NVIDIA Corporation"),
    anno::display_name("Diffuse light"),
    anno::description("Material for a light with a diffuse emission characteristic")
]] = material (
    surface: material_surface (
        emission:  material_emission (
            emission: df::diffuse_edf(),
            intensity: tint*intensity*unit_scale
        )
    )
);

export material light_spot (
    uniform color tint = color(1.)
    [[
        anno::display_name("Emission color"),
        anno::description("The color of the light")
    ]],
    uniform float intensity = 10
    [[
        anno::display_name("Intensity"),
        anno::description("The brightness of light")
    ]],
    uniform float unit_scale = 1.
    [[
        anno::display_name("Unit scale"),
        anno::description("Compensate for scene units other then meter")
    ]], 
    uniform float spot_exponent = 30
    [[
        anno::display_name("Spot exponent"),
        anno::description("the higher the exponent, the more focused the emission is")
    ]] 
) [[
    anno::copyright_notice (
    "SPDX-FileCopyrightText: Copyright (c) 2016-2025 NVIDIA CORPORATION & AFFILIATES. All rights reserved. "
    "SPDX-License-Identifier: MIT"
    ),
    anno::author("NVIDIA Corporation"),
    anno::display_name("Spot light"),
    anno::description("Material for a light with a shaped emission characteristic")
]] = material (
    surface: material_surface (
        emission:  material_emission (
            emission: df::spot_edf(
                exponent: spot_exponent,
                global_distribution: true, 
                global_frame: float3x3(1.,0,0,   0,1.,0.,  0.,0,-1) 
            ),
            intensity: tint*intensity*unit_scale
        )
    )
);

